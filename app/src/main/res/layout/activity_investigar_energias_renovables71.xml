<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".investigar_energias_renovables71">


    <ImageView
        android:id="@+id/imageBefore"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:background="@color/transparente"
        android:contentDescription="@string/volver_atras"
        app:layout_constraintEnd_toStartOf="@+id/logo"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/navigate_before" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="68dp"
        android:contentDescription="@string/logo_ecoapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_ecoapp" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="800dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="55dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">


        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="16dp"
            android:text="@string/formulario"
            android:textColor="@color/green"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="385dp"
            android:layout_height="48dp"
            android:hint="@string/ingrese_su_nombre"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:textColorHint="#424343" />

        <EditText
            android:id="@+id/editTextDireccion"
            android:layout_width="385dp"
            android:layout_height="48dp"
            android:hint="@string/ingrese_su_direcc"
            android:inputType="text"
            android:textColorHint="#424343"
            android:paddingLeft="16dp" />

        <EditText
            android:id="@+id/editTextTelefono"
            android:layout_width="385dp"
            android:layout_height="48dp"
            android:hint="@string/ingrese_su_tel"
            android:textColorHint="#424343"
            android:inputType="text"
            android:paddingLeft="16dp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="385dp"
            android:layout_height="48dp"
            android:hint="@string/ingrese_su_correo"
            android:textColorHint="#424343"
            android:inputType="text"
            android:paddingLeft="16dp" />

        <TextView
            android:id="@+id/textViewTipoVivienda"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="12dp"
            android:text="@string/tipo_de_vivienda"
            android:textColor="@color/green"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonCasa"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:text="Casa" />

            <RadioButton
                android:id="@+id/radioButtonApartamento"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:text="Apartamento" />

            <RadioButton
                android:id="@+id/radioButtonGranja"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:textColor="@color/black"
                android:text="Granja" />


        </LinearLayout>

        <TextView
            android:id="@+id/textEnergia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="12dp"
            android:text="@string/sistemas_de_energia"
            android:textColor="@color/green"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <CheckBox
                android:id="@+id/opcion1CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Paneles Solares" />

            <CheckBox
                android:id="@+id/opcion2CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Aerogeneradores" />


            <CheckBox
                android:id="@+id/opcion3CheckBox"
                android:layout_width="92dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Otros" />


        </LinearLayout>

        <Button
            android:id="@+id/buttonEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/enviar_solicitud"
            android:textColor="@color/background_color"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="270dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/vector_renovables" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>